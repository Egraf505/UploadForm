<Window x:Class="UploadForm.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UploadForm.DesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBox x:Name="Name" Height="40" Width="200"/>
            <TextBox x:Name="SurName" Height="40" Width="200"/>
            <TextBox x:Name="MiddleNameBox" Height="40" Width="200"/>

            <TextBlock x:Name="FileName" Height="40" Width="200"/>

            <Button Click="Button_Click_1" Content="Выбрать файл" Height="20" Width="100"/>
            <Button Click="Button_Click" Content="Отправить" Height="40" Width="100" Margin="0 20 0 0"/>

        </StackPanel>
    </Grid>
</Window>
